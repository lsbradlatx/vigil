// Prisma schema for StoicSips - SQLite (single user, no auth)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  dueDate   DateTime?
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

model CalendarEvent {
  id        String   @id @default(cuid())
  title     String
  start     DateTime
  end       DateTime
  allDay    Boolean  @default(false)
  color     String?
  createdAt DateTime @default(now())
}

model StimulantLog {
  id       String   @id @default(cuid())
  substance String  // CAFFEINE | ADDERALL | DEXEDRINE | NICOTINE (SQLite has no enums)
  amount   String?  // display e.g. "100mg", "1 cup"
  amountMg Float?   // numeric mg for daily total (caffeine/adderall); nicotine in mg
  loggedAt DateTime
  notes    String?
}

// Single row for app: Google Calendar OAuth refresh token (single-user app)
model GoogleCalendarToken {
  id           String   @id // use "default" as the single row id
  refreshToken String
  updatedAt    DateTime @updatedAt
}

// Single row for app: Asana Personal Access Token (single-user app)
model AsanaToken {
  id            String   @id // use "default"
  accessToken   String
  workspaceGid  String?   // optional; if null, first workspace is used when fetching
  updatedAt     DateTime  @updatedAt
}

// Single row for app: user health profile for personalized stimulant recommendations
model UserHealthProfile {
  id         String   @id // use "default"
  weightKg   Float?
  heightCm   Float?
  allergies  String?  // comma-separated or JSON array
  medications String?
  updatedAt  DateTime @updatedAt
}

// Caffeine drink database for auto-computing dose when logging
model Drink {
  id     String      @id @default(cuid())
  name   String      // e.g. "Caffe Latte"
  brand  String?     // e.g. "Starbucks"
  sizes  DrinkSize[]
}

model DrinkSize {
  id         String @id @default(cuid())
  drinkId    String
  drink      Drink  @relation(fields: [drinkId], references: [id], onDelete: Cascade)
  sizeLabel  String // e.g. "Grande"
  caffeineMg Int    // caffeine in mg
}
