generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  username      String    @unique
  email         String    @unique
  passwordHash  String
  emailVerified DateTime?
  createdAt     DateTime  @default(now())

  tasks               Task[]
  calendarEvents      CalendarEvent[]
  stimulantLogs       StimulantLog[]
  googleCalendarToken GoogleCalendarToken?
  asanaToken          AsanaToken?
  healthProfile       UserHealthProfile?
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Task {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  dueDate   DateTime?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model CalendarEvent {
  id        String   @id @default(cuid())
  title     String
  start     DateTime
  end       DateTime
  allDay    Boolean  @default(false)
  color     String?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StimulantLog {
  id        String   @id @default(cuid())
  substance String
  amount    String?
  amountMg  Float?
  loggedAt  DateTime
  notes     String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GoogleCalendarToken {
  id           String   @id @default(cuid())
  refreshToken String
  updatedAt    DateTime @updatedAt
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AsanaToken {
  id           String   @id @default(cuid())
  accessToken  String
  workspaceGid String?
  updatedAt    DateTime @updatedAt
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model UserHealthProfile {
  id             String   @id @default(cuid())
  weightKg       Float?
  heightCm       Float?
  allergies      String?
  medications    String?
  sex            String?  // "male" | "female" | "other"
  smokingStatus  String?  // "non-smoker" | "smoker" | "former-smoker"
  birthYear      Int?
  updatedAt      DateTime @updatedAt
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Drink {
  id    String      @id @default(cuid())
  name  String
  brand String?
  sizes DrinkSize[]
}

model DrinkSize {
  id         String @id @default(cuid())
  drinkId    String
  drink      Drink  @relation(fields: [drinkId], references: [id], onDelete: Cascade)
  sizeLabel  String
  caffeineMg Int
}
