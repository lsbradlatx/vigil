// Prisma schema for StoicSips - SQLite (single user, no auth)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  dueDate   DateTime?
  order     Int      @default(0)
  createdAt DateTime @default(now())
}

model CalendarEvent {
  id        String   @id @default(cuid())
  title     String
  start     DateTime
  end       DateTime
  allDay    Boolean  @default(false)
  color     String?
  createdAt DateTime @default(now())
}

model StimulantLog {
  id       String   @id @default(cuid())
  substance String  // CAFFEINE | ADDERALL | DEXEDRINE | NICOTINE (SQLite has no enums)
  amount   String?  // display e.g. "100mg", "1 cup"
  amountMg Float?   // numeric mg for daily total (caffeine/adderall); nicotine in mg
  loggedAt DateTime
  notes    String?
}

// Single row for app: Google Calendar OAuth refresh token (single-user app)
model GoogleCalendarToken {
  id           String   @id // use "default" as the single row id
  refreshToken String
  updatedAt    DateTime @updatedAt
}

// Single row for app: Asana Personal Access Token (single-user app)
model AsanaToken {
  id            String   @id // use "default"
  accessToken   String
  workspaceGid  String?   // optional; if null, first workspace is used when fetching
  updatedAt     DateTime  @updatedAt
}
